import java.util.Scanner;
public class Equilateral {
	public static void main(String[] args) {
		int n;
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter number of rows");
		n=sc.nextInt();
		for(int i=n;i>0;i--) {
			for(int j=0;j<n-i;j++)
                        {
				System.out.print(" ");
			}
				for(int j=0;j<(i*2)-1;j++)
                                {
					System.out.print("*");
			}
			System.out.println();

	}

}
}
